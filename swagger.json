              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {"$ref": "#/components/schemas/User"}
                }
              }
            }
          }
        }
      }
    },
    "/admin/profile": {
      "get": {
        "tags": ["Admin"],
        "summary": "Get admin profile",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "Admin profile",
