            }
          }
        }
      }
    },
    "/transactions": {
      "get": {
        "tags": ["Transactions"],
        "summary": "Get all transactions with filters",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "schema": {"type": "string", "enum": ["loan", "repayment"]}
          },
          {
            "name": "startDate",
            "in": "query",
            "schema": {"type": "string", "format": "date"}
          },
          {
            "name": "endDate",
            "in": "query",
            "schema": {"type": "string", "format": "date"}
          }
        ],
        "responses": {
          "200": {
            "description": "List of transactions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
